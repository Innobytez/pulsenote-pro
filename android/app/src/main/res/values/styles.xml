<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme shown while the Android process is starting (before Flutter draws) -->
    <style name="LaunchTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- Match iOS background: dark grey/black -->
        <item name="android:windowBackground">@color/splash_color</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    <!-- Theme used once Flutter engine has started -->
    <style name="NormalTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
